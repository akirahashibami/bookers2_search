<div class="row">
<div class="col-xs-12">
  <h2>Followed Users</h2>

  <table class="table">

    <thead>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag(user.follower, :profile_image, :fill, 50, 50, fallback: "no_image.jpg") %></td>
        <td><%= user.follower.name %></td>
        <td><p>フォロー数 : <%= user.follower.follower.count %></p></td>
        <td><p>フォロワー数 : <%= user.follower.followed.count %></p></td>
        <td><%= link_to "Show", user_path(user.follower.id), class: "user_#{user.id}" %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
</div>
</div>
